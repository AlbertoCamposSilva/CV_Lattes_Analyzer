   issue = {1},
   journal = {Em Questão},
   month = {12},
   pages = {336-360},
   publisher = {Faculdade de Biblioteconomia Comunicacao},
   title = {A contribuição da genealogia acadêmica para a construção de indicadores bibliométricos},
   volume = {27},
