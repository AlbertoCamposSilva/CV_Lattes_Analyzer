   journal = {Transinformacao},
   keywords = {Analysis of scientific output,Bibliometry,Internationalization,Postgraduate studies,Scientific collaboration},
   publisher = {Pontificia Universidade Catolica de Campinas},
   title = {Impact of teacher education abroad in international co-authorship: A study of Federal University of São Carlos's scientifics production indexed in the Web of Science},
   volume = {33},
   year = {2021},
}
